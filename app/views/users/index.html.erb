<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render partial: "layouts/form"%>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <% @lists.each do |list| %>
        <tbody>
          <tr>
            <td><%= attachment_image_tag User.find(list.id), :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
            <td><%= list.name %></td>
            <td><%= link_to "Show", user_path(list.id) %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>