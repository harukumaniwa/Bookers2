<div class="col-md-3">
  <h2>User info</h2>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <table class="table">
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </tbody>
  </table>

  <div class="row">
    <%= link_to "", edit_user_path(id: @user.id), class:"btn btn-outline-secondary btn-block fas fa-user-cog edit_user_98" %>
  </div>
  <h2 class="mt-3">New book</h2>
  <%= form_with model: @new, local:true do |form| %>
    <div class="form-group">
      <%= form.label :book_title, "Title" %><br />
      <%= form.text_field :title, class: "form-control book_title" %>
    </div>
    <div class="form-group">
      <%= form.label :book_opinion, "Opinion" %><br />
      <%= form.text_area :body, class: "form-control book_body" %>
    </div>

    <div class="form-group"><%= form.submit "Create Book", class: "btn btn-success" %></div>
  <% end %>
</div>