<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book, local:true do |form| %>
        <% if @book.errors.any? %>
          <div id="error_explanation" style="color: red;">
            <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group">
          <%= form.label :book_title, "Title" %><br />
          <%= form.text_field :title, class: "form-control book_title" %>
        </div>
        <div class="form-group">
          <%= form.label :book_opinion, "Opinion" %><br />
          <%= form.text_area :body, class: "form-control book_body" %>
        </div>
        <div class="form-group">
          <%= form.submit "Update Book", class: "btn btn-success" %>
        </div>
        <%= link_to "Show", book_path %>|<%= link_to "Back", "/books" %>
      <% end %>
    </div>
  </div>
</div>