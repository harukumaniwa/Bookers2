<div class="container px-5 px-sm-0">
  <% if @book.errors.any? %>
    <div id="error_explanation" style="color: red;">
      <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <%= render partial: "layouts/form"%>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </thead>
        <tbody>
          <% @lists.each do |list| %>
            <tr>
              <td>
                <%= link_to user_path(list.user_id) do %>
                  <%= attachment_image_tag User.find(list.user_id), :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
                <% end %>
              </td>
              <td>
                <%= link_to list.title, book_path(list.id) %>
              </td>
              <td><%= list.body %></td>
            </tr>
          <% end %>

        </tbody>
      </table>
    </div>
  </div>
</div>